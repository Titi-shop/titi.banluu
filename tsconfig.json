{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": false,                // ‚õî kh√¥ng cho JS l·∫´n TS
    "skipLibCheck": false,           // ‚úÖ b·∫Øt l·ªói type th·∫≠t
    "strict": true,
    "noEmit": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "noUncheckedIndexedAccess": true, // üîê ch·ªëng undefined
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,

    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
